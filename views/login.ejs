<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags and Title -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login or Sign Up - ALLSTARS JERSEYS</title>
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">

    <!-- Bootstrap CSS and Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <!-- Header -->
    <%- include('partials/compactHeader.ejs') %>

    <!-- Welcome Message -->
    <div class="text-center mb-4">
        <h1 class="auth-title">Login or create an account to continue</h1>
    </div>

    <!-- Authentication Container --> 
    <div class="auth-container shadow">
        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs mb-4" id="authTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab">Login</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="signup-tab" data-bs-toggle="tab" data-bs-target="#signup" type="button" role="tab">Sign Up</button>
            </li>
        </ul>

        <!-- Tabs Content -->
        <div class="tab-content" id="authTabContent">
            <!-- Login Tab -->
            <div class="tab-pane fade show active" id="login" role="tabpanel">
                <h2 class="text-center">Welcome!</h2>
                <form action="/login" method="POST">
                    <!-- Username Input -->
                    <div class="mb-3">
                        <label for="loginUsername" class="form-label">Username</label>
                        <input class="form-control" id="loginUsername" name="username" required>
                    </div>
                    <!-- Password Input -->
                    <div class="mb-3">
                        <label for="loginPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="loginPassword" name="password" required>
                    </div>
                    <!-- Error message placeholder -->
                    <div id="loginError" class="text-danger mb-3"></div>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
            </div>

            <!-- Signup Tab -->
            <div class="tab-pane fade" id="signup" role="tabpanel">
                <h2 class="text-center">Create an Account</h2>
                <form action="/register" method="POST">
                    <!-- Name Input -->
                    <div class="mb-3">
                        <label for="signupName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="signupName" name="name" required>
                    </div>
                    <!-- Email Input -->
                    <div class="mb-3">
                        <label for="signupEmail" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="signupEmail" name="email" required>
                    </div>
                    <!-- Username Input -->
                    <div class="mb-3">
                        <label for="signupUsername" class="form-label">Username</label>
                        <input class="form-control" id="signupUsername" name="username" required>
                    </div>
                    <!-- Password Input -->
                    <div class="mb-3">
                        <label for="signupPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="signupPassword" name="password" required>
                    </div>
                    <!-- Confirm Password Input -->
                    <div class="mb-3">
                        <label for="signupConfirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="signupConfirmPassword" name="confirmPassword" required>
                    </div>
                    <!-- Favorite Team Selection -->
                    <div class="mb-3">
                        <label for="team" class="form-label">Favorite Team</label>
                        <select class="form-select" id="team" name="team" required>
                            <option value="" disabled selected>Select a favorite team</option>
                            <% teams.forEach(function(team) { %>
                                <option value="<%= team.twitterHandle %>"><%= team.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <!-- Error message placeholder -->
                    <div id="registerError" class="text-danger mb-3"></div>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Bootstrap JS and Optional jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Optional: Include the jQuery library -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Optional: Form Validation Script -->
    <script src="/js/login.js"></script>
</body>
</html>
