<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Cart - ALLSTARS JERSEYS</title>
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <%- include('partials/compactHeader.ejs') %>

    <div class="container my-5">
        <h1 class="mb-4">Shopping Cart</h1>

        <div class="row">
            <div class="col-lg-8">
                <div class="cart-items-container">
                    <% if (cartItems && cartItems.length > 0) { %>
                        <% cartItems.forEach(function(item) { %>
                            <div class="card mb-3 cart-item" data-item-id="<%= item.itemId %>">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <img src="/jerseys/image/<%= item.itemId %>" class="img-fluid rounded-start" alt="<%= item.team %>">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= item.team %> <%= item.kitType %></h5>
                                            <p class="card-text">Size: <%= item.size %></p>
                                            <p class="card-text">Price: $<%= item.price.toFixed(2) %></p>
                                            <div class="input-group mb-3 quantity-selector">
                                                <button class="btn btn-outline-secondary decrease-qty" type="button" data-item-id="<%= item.itemId %>">-</button>
                                                <input type="text" class="form-control text-center qty-input" value="<%= item.quantity %>" data-item-id="<%= item.itemId %>">
                                                <button class="btn btn-outline-secondary increase-qty" type="button" data-item-id="<%= item.itemId %>">+</button>
                                            </div>
                                            <button class="btn btn-danger remove-item" data-item-id="<%= item.itemId %>"><i class="bi bi-trash"></i> Remove</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>Your cart is currently empty.</p>
                    <% } %>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card order-summary">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <span>Subtotal</span>
                            <span class="subtotal-amount">$<%= subtotal.toFixed(2) %></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Shipping</span>
                            <span>Free</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Total</span>
                            <span class="total-amount">$<%= subtotal.toFixed(2) %></span>
                        </div>
                        <button class="btn btn-primary w-100 mt-3" id="checkout-btn" onclick="window.location.href='/cart/checkout'">Proceed to Checkout</button>
                        <a href="/jerseys" class="btn btn-outline-secondary w-100 mt-2">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    $(document).ready(function() {
        // Update Cart Item Quantity
        function updateCartItem(itemId, quantity) {
            $.ajax({
                url: `/cart/updateCart?id=${itemId}`,
                type: 'POST',
                data: { quantity }, // Send the updated quantity
                success: function() {
                    location.reload(); // Reload the page to reflect cart changes
                },
                error: function() {
                    alert('Error updating item in the cart.');
                }
            });
        }

        // Remove Item from Cart
        $('.cart-items-container').on('click', '.remove-item', function() {
            const itemId = $(this).data('item-id');
            $.ajax({
                url: '/cart/deleteItemFromCart',
                type: 'DELETE',
                contentType: 'application/json',
                data: JSON.stringify({ itemId }),
                success: function() {
                    location.reload(); // Reload the page to reflect changes
                },
                error: function() {
                    alert('Error removing item from cart.');
                }
            });
        });

        // Increase/Decrease Quantity
        $('.cart-items-container').on('click', '.increase-qty, .decrease-qty', function() {
            const itemId = $(this).data('item-id');
            const qtyInput = $(this).siblings('.qty-input');
            let quantity = parseInt(qtyInput.val());

            if ($(this).hasClass('increase-qty')) {
                quantity++;
            } else if ($(this).hasClass('decrease-qty') && quantity > 1) {
                quantity--;
            }

            qtyInput.val(quantity);
            updateCartItem(itemId, quantity); // Update the cart with new quantity
        });
    });
    </script>
</body>
</html>
