<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <title>Admin - Edit Store</title>

    <!-- Bootstrap CSS and Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/main.css">
</head>
<body>

    <!-- Header -->
    <%- include('partials/compactHeader.ejs') %>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Edit Store</h1>
            <a href="/admin/stores" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Stores
            </a>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <form action="/admin/stores/edit/<%= store._id %>" method="POST">
                    
                    <!-- Store Name -->
                    <div class="mb-3">
                        <label for="name" class="form-label">Store Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= store.name %>" required>
                    </div>

                    <!-- Address -->
                    <div class="mb-3">
                        <label for="address" class="form-label">Address <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="address" name="address" value="<%= store.address %>" required>
                    </div>

                    <!-- Latitude -->
                    <div class="mb-3">
                        <label for="lat" class="form-label">Latitude <span class="text-danger">*</span></label>
                        <input type="number" step="any" class="form-control" id="lat" name="lat" value="<%= store.coordinates.lat %>" required>
                    </div>

                    <!-- Longitude -->
                    <div class="mb-3">
                        <label for="lng" class="form-label">Longitude <span class="text-danger">*</span></label>
                        <input type="number" step="any" class="form-control" id="lng" name="lng" value="<%= store.coordinates.lng %>" required>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</body>
</html>