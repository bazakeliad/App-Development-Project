<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/main.css">
</head>
<body>

    <!-- Header -->
    <%- include('partials/compactHeader.ejs') %>

    <!-- Page Title -->
    <%- include('partials/pageTitle.ejs', { title: 'My Profile' }) %>
    
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="/personalArea" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Personal Area
            </a>
        </div>

        <!-- Toast Notification -->
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div id="messageToast" class="toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div id="messageBody" class="toast-body"></div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>

        <!-- User Edit Form -->
        <div class="card mb-4">
            <div class="card-body">
                <form action="/personalArea/profile" method="POST">
                    <!-- Name -->
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                    </div>

                    <!-- Password (Optional) -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password (Leave blank to keep current password)</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>

                    <!-- Favorite Team -->
                    <div class="mb-3">
                        <label for="team" class="form-label">Favorite Team</label>
                        <select name="team" class="form-select">
                            <option value="" <%= !user.team ? 'selected' : '' %>>None</option>
                            <% teams.forEach(function(team) { %>
                                <option value="<%= team.twitterHandle %>" <%= user.team === team.twitterHandle ? 'selected' : '' %>><%= team.name %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Script to show toast based on URL parameters -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Get the query parameters from the URL
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            const type = urlParams.get('type');

            if (message) {
                const messageToastEl = document.getElementById('messageToast');
                const messageBody = document.getElementById('messageBody');

                messageBody.textContent = message;

                // Apply success or error styling
                if (type === 'success') {
                    messageToastEl.classList.add('text-bg-success');
                } else if (type === 'error') {
                    messageToastEl.classList.add('text-bg-danger');
                }

                // Show the toast
                const toast = new bootstrap.Toast(messageToastEl);
                toast.show();
            }
        });
    </script>
</body>
</html>
