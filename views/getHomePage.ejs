<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ALLSTARS JERSEYS</title>
    <link rel="icon" href="images/favicon.ico" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="main.css">
</head>

<body>

    <!-- Header -->
    <%- include('partials/mainHeader.ejs') %>

    <!-- Big Photo with Buttons -->
    <div class="container-fluid p-0">
        <div class="position-relative">
            <img src="images/banner.jpg" class="img-fluid w-100" alt="Big Banner" style="height: 60vh; object-fit: cover;">
            
            <!-- Overlay buttons at the bottom -->
            <div class="position-absolute bottom-0 start-50 translate-middle-x mb-4 text-center">
                <a href="/getAllJerseys" class="btn btn-dark btn-lg mx-2 shopnow-button">SHOP NOW <i class="bi bi-arrow-right"></i></a>
                <a href="/signup" class="btn btn-light btn-lg mx-2 join-button">JOIN THE CLUB!</a>
            </div>
        </div>
    </div>

    <!-- Jersey Section with Hover Effect -->
    <div class="container my-5">
        <div class="row">
            <% for (let i = 0; i < Math.min(jerseys.length, 3); i++) { %> 
                <div class="col-md-4 py-1">
                    <div class="card h-100">
                        <a href="/getJersey?id=<%= jerseys[i]._id %>" class="card-link">
                            <img src="images/<%= jerseys[i].image || 'default-image.jpg' %>" class="card-img-top" alt="<%= jerseys[i].team %>">
                            <div class="card-body">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><%= jerseys[i].team %> Jersey</h5>
                                    <p class="card-text"><%= jerseys[i].kitType %></p>
                                    <p class="card-text fw-bold">$<%= (typeof jerseys[i].price === 'number') ? jerseys[i].price.toFixed(2) : 'N/A' %></p>
                                    <div class="card-footer text-center">
                                        <a href="/addToCart?id=<%= jerseys[i]._id %>" class="btn btn-outline-primary"><i class="bi bi-cart-plus"></i> Add to Cart</a>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    

   <!-- Footer -->
   <%- include('partials/footer.ejs') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="getHomePage.js"></script>

</body>

</html>
