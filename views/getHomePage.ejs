<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta Tags and Title -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ALLSTARS JERSEYS - Home</title>
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">

    <!-- Bootstrap CSS and Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/main.css">
</head>

<body>

    <!-- Header -->
    <%- include('partials/mainHeader.ejs') %>

    <!-- Hero Carousel -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active position-relative">
                <img src="/images/banner.jpg" class="d-block w-100" alt="First Slide">
                <!-- Overlay -->
                <div class="carousel-overlay"></div>
                <!-- Caption -->
                <div class="carousel-caption d-none d-md-block">
                    <h1>Welcome to ALLSTARS JERSEYS</h1>
                    <p>Your one-stop shop for official jerseys</p>
                    <a href="/getAllJerseys" class="btn btn-primary btn-lg">Shop Now</a>
                </div>
            </div>
            <!-- Slide 2 -->
            <div class="carousel-item position-relative">
                <img src="/images/ronaldo.jpg" class="d-block w-100" alt="Second Slide">
                <!-- Overlay -->
                <div class="carousel-overlay"></div>
                <!-- Caption -->
                <div class="carousel-caption d-none d-md-block">
                    <h1>New Season, New Jerseys</h1>
                    <p>Check out the latest kits</p>
                    <a href="/getAllJerseys?new=true" class="btn btn-primary btn-lg">Explore New Arrivals</a>
                </div>
            </div>
            
        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Featured Products Section -->
    <div class="container my-5 featured-products">
        <h2 class="text-center mb-4">Featured Jerseys</h2>
        <div class="row">
            <% for (let i = 0; i < Math.min(featuredJerseys.length, 4); i++) { %>
                <div class="col-6 col-md-3 mb-4">
                    <div class="card h-100">
                        <a href="/getJersey?id=<%= featuredJerseys[i]._id %>" class="card-link">
                            <% if (featuredJerseys[i].image && featuredJerseys[i].image.data) { %>
                                <img src="/jerseys/image/<%= featuredJerseys[i]._id %>" class="card-img-top" alt="<%= featuredJerseys[i].team %>">
                            <% } else { %>
                                <img src="/images/default-image.jpg" class="card-img-top" alt="Default Image">
                            <% } %>
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= featuredJerseys[i].team %> <%= featuredJerseys[i].kitType %></h5>
                                <p class="card-text fw-bold">$<%= (typeof featuredJerseys[i].price === 'number') ? featuredJerseys[i].price.toFixed(2) : 'N/A' %></p>
                            </div>
                        </a>
                        <div class="card-footer text-center">
                            <a href="/addToCart?id=<%= featuredJerseys[i]._id %>" class="btn btn-outline-primary"><i class="bi bi-cart-plus"></i> Add to Cart</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Promotional Banner -->
    <div class="container-fluid promo-banner" style="background-image: url('/images/promo-banner.jpg');">
        <div class="row">
            <div class="col text-center">
                <h2>Season Sale: Up to 50% Off!</h2>
                <p>Get your favorite jerseys at unbeatable prices.</p>
                <a href="/getAllJerseys?sale=true" class="btn btn-light btn-lg">Shop Sale</a>
            </div>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="container my-5 testimonials">
        <h2 class="text-center mb-4">What Our Customers Say</h2>
        <div class="row">
            <% for (let i = 0; i < testimonials.length; i++) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <p class="card-text">"<%= testimonials[i].message %>"</p>
                            <h5 class="card-title">- <%= testimonials[i].name %></h5>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Newsletter Subscription -->
    <div class="container newsletter">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2>Stay Updated</h2>
                <p>Subscribe to our newsletter for the latest updates and offers.</p>
                <form action="/subscribe" method="POST" class="row g-2">
                    <div class="col-md-9">
                        <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter your email" required>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary btn-lg w-100">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Bootstrap JS and Optional jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Optional: Include the jQuery library -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</body>

</html>
