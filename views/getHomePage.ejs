<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta Tags and Title -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ALLSTARS JERSEYS - Home</title>
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">

    <!-- Bootstrap CSS and Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/css/getHomePage.css">
</head>

<body>

    <!-- Header -->
    <%- include('partials/mainHeader.ejs') %>

    <!-- Hero Carousel -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active position-relative">
                <img src="/images/banner.jpg" class="d-block w-100" alt="First Slide">
                <!-- Overlay -->
                <div class="carousel-overlay"></div>
                <!-- Caption -->
                <div class="carousel-caption d-none d-md-block">
                    <h1>Welcome to ALLSTARS JERSEYS</h1>
                    <p>Your one-stop shop for official jerseys</p>
                    <a href="/jerseys" class="btn btn-primary btn-lg">Shop Now</a>
                </div>
            </div>
            <!-- Slide 2 -->
            <div class="carousel-item position-relative">
                <img src="/images/ronaldo.jpg" class="d-block w-100" alt="Second Slide">
                <!-- Overlay -->
                <div class="carousel-overlay"></div>
                <!-- Caption -->
                <div class="carousel-caption d-none d-md-block">
                    <h1>New Season, New Jerseys</h1>
                    <p>Check out the latest kits</p>
                    <a href="/jerseys?new=true" class="btn btn-primary btn-lg">Explore New Arrivals</a>
                </div>
            </div>
            
        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Featured Products Section -->
    <div class="container my-5 featured-products">
        <h2 class="text-center mb-4">Featured Jerseys</h2>
        <div class="row">
            <% for (let i = 0; i < Math.min(featuredJerseys.length, 4); i++) { %>
                <div class="col-6 col-md-3 mb-4">
                    <div class="card h-100">
                        <a href="/jerseys/<%= featuredJerseys[i]._id %>" class="card-link">
                            <% if (featuredJerseys[i].image && featuredJerseys[i].image.data) { %>
                                <img src="/jerseys/image/<%= featuredJerseys[i]._id %>" class="card-img-top" alt="<%= featuredJerseys[i].team %>">
                            <% } else { %>
                                <img src="/images/default-image.jpg" class="card-img-top" alt="Default Image">
                            <% } %>
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= featuredJerseys[i].team %> <%= featuredJerseys[i].kitType %></h5>
                                <p class="card-text fw-bold">$<%= (typeof featuredJerseys[i].price === 'number') ? featuredJerseys[i].price.toFixed(2) : 'N/A' %></p>
                            </div>
                        </a>
                        <div class="card-footer text-center">
                            <button type="button" class="btn btn-outline-primary add-to-cart-btn" data-item-id="<%= featuredJerseys[i]._id %>" data-jersey-index="<%= i %>">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <!-- News Section -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Latest News</h2>
        <div class="row" id="newsList">
            <!-- News items will be populated dynamically -->
        </div>
    </div>

        <!-- HTML template for news items -->
        <script type="text/html" id="newsTemplate">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="{urlToImage}" class="card-img-top news-img" alt="{title}" onerror="this.src='/images/default-image.jpg';">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{title}</h5>
                        <p class="card-text"><b>Author:</b> {author}</p>
                        <p class="card-text"><b>Source:</b> {source}</p>
                        <p class="card-text">{description}</p>
                        <a href="{url}" target="_blank" class="btn btn-primary mt-auto">Read More</a>
                    </div>
                </div>
            </div>
        </script>
    <!-- ------------------------------------- -->

    <!-- Promotional Banner -->
    <div class="container-fluid promo-banner position-relative" style="background-image: url('/images/promo-banner.jpg');">
        <!-- Add a dark overlay to improve text visibility -->
        <div class="promo-overlay"></div>
        
        <div class="row position-relative">
            <div class="col text-center text-white">
                <h2 class="display-4 text-uppercase text-shadow">Season Sale: Up to 50% Off!</h2>
                <p class="lead text-shadow">Get your favorite jerseys at unbeatable prices.</p>
                <a href="/jerseys?sale=true" class="btn btn-light btn-lg">Shop Sale</a>
            </div>
        </div>
    </div>
    
    <!-- Testimonials Section -->
    <div class="container my-5 testimonials">
        <h2 class="text-center mb-4">What Our Customers Say</h2>
        <div class="row">
            <% for (let i = 0; i < testimonials.length; i++) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <p class="card-text">"<%= testimonials[i].message %>"</p>
                            <div class="star-rating">
                                <% for (let j = 1; j <= 5; j++) { %>
                                    <span class="star <%= testimonials[i].rating >= j ? 'filled' : '' %>">â˜…</span>
                                <% } %>
                            </div>
                            <h5 class="card-title">- <%= testimonials[i].userId %></h5>
                            <p class="text-muted">
                                Created on: <%= new Date(testimonials[i].createdAt).toLocaleDateString() %>
                            </p>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Newsletter Subscription -->
    <div class="container newsletter">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2>Stay Updated</h2>
                <p>Subscribe to our newsletter for the latest updates and offers.</p>
                <form action="/subscribe" method="POST" class="row g-2">
                    <div class="col-md-9">
                        <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter your email" required>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary btn-lg w-100">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Add to Cart pop up -->
    <%- include('partials/addToCartModal.ejs') %>
    <%- include('partials/toastAddToCart.ejs') %> 

    <!-- Bootstrap JS and Optional jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script src="/js/getHomePage.js"></script>

    <script>
        $(document).ready(function() {
            let selectedJerseyId = null;
    
            // Add to Cart Button Click Event
            $('.add-to-cart-btn').click(function(e) {
                e.preventDefault();
                selectedJerseyId = $(this).data('item-id');
                const jerseyIndex = $(this).data('jersey-index');
                
                // Populate sizes based on selected jersey
                const sizes = <%- JSON.stringify(featuredJerseys.map(j => j.sizes)) %>;
                const sizeOptions = sizes[jerseyIndex].map(size => `<option value="${size}">${size}</option>`).join('');
                $('#size').html(sizeOptions);
                
                $('#addToCartModal').modal('show');
            });
    
            // Confirm Add to Cart
            $('#confirmAddToCartBtn').click(function() {
                const size = $('#size').val();
                const quantity = $('#quantity').val();
    
                if (!size) {
                    alert('Please select a size.');
                    return;
                }
    
                $.ajax({
                    url: `/cart/updateCart?id=${selectedJerseyId}`,
                    type: 'POST',
                    data: JSON.stringify({ size, quantity: parseInt(quantity) }),
                    contentType: 'application/json',
                    success: function(response) {
                        $('#addToCartModal').modal('hide');
                        const toast = new bootstrap.Toast($('#addToCartToast'));
                        toast.show();
                    },
                    error: function(error) {
                        alert('Error adding item to cart.');
                    }
                });
            });
        });
    </script>   
</body>

</html>
