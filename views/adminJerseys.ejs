<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Allstars Jerseys Shop</title>
    <link rel="icon" href="images/favicon.ico" type="image/x-icon">

    <!-- Bootstrap CSS and Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="admin.css">
</head>
<body>
    
    <!-- Header -->
    <header>
        <!-- Top Bar -->
        <div class="top-bar d-flex justify-content-between align-items-center">
            <!-- Logo and Site Name -->
            <div class="logo">
                <a href="/" class="d-flex align-items-center text-decoration-none">
                    <img src="images/logo.jpg" alt="Logo">
                    <span>Allstars Jerseys Shop</span>
                </a>
            </div>
            <!-- Navigation Bar -->
            <nav class="nav-bar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/browse">Browse</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/myteam">My Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/aboutus">About Us</a>
                    </li>
                </ul>
            </nav>
            <!-- Account Links -->
            <div class="account-links">
                <a href="/search" class="text-decoration-none me-3"><i class="bi bi-search"></i></a>
                <a href="/login" class="text-decoration-none me-3"><i class="bi bi-person-circle"></i></a>
                <a href="/cart" class="text-decoration-none"><i class="bi bi-cart"></i></a>
            </div>
        </div>
    </header>

    <!-- "All Jerseys" Section -->
    <section class="all-jerseys-title">
        <div class="container">
            <h2>Manage Jerseys</h2>
        </div>
    </section>
    <!-- Main Content -->
    <div class="container my-5">
        <!-- <h2>Manage Jerseys</h2> -->
        <a href="/admin/jerseys/add" class="btn btn-primary mb-3">Add New Jersey</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Team</th>
                    <th>Kit Type</th>
                    <th>Price</th>
                    <th>Sizes</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% jerseys.forEach(function(jersey) { %>
                    <tr>
                        <td><%= jersey.team %></td>
                        <td><%= jersey.kitType %></td>
                        <td>$<%= jersey.price.toFixed(2) %></td>
                        <td><%= jersey.sizes.join(', ') %></td>
                        <td><img src="/images/<%= jersey.image %>" alt="<%= jersey.team %>" style="width: 50px;"></td>
                        <td>
                            <a href="/admin/jerseys/edit/<%= jersey._id %>" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/admin/jerseys/delete/<%= jersey._id %>" method="POST" class="d-inline-block" onsubmit="return confirm('Are you sure you want to delete this jersey?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="text-center mt-3">
                <p class="mb-0">&copy; 2024 Allstars Jerseys Shop. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Optional: Include the jQuery library -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</body>
</html>
