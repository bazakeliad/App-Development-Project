<!-- views/adminJerseys.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Manage Jerseys</title>
    <!-- Bootstrap CSS and Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/main.css">
</head>
<body>

    <!-- Header -->
    <%- include('partials/compactHeader.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (Optional) -->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/admin/dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/jerseys">
                                <i class="bi bi-shirt"></i> Jerseys
                            </a>
                        </li>
                        <!-- Add more sidebar items as needed -->
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <!-- Page Title -->
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Manage Jerseys</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/jerseys/add" class="btn btn-sm btn-primary">
                            <i class="bi bi-plus-lg"></i> Add New Jersey
                        </a>
                    </div>
                </div>

                <!-- Jerseys Table -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Image</th>
                                <th scope="col">Team</th>
                                <th scope="col">Kit Type</th>
                                <th scope="col">Price</th>
                                <th scope="col">Sizes</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% jerseys.forEach(function(jersey) { %>
                                <tr>
                                    <td>
                                        <% if (jersey.image && jersey.image.data) { %>
                                            <img src="/admin/jerseys/image/<%= jersey._id %>" alt="<%= jersey.team %>" style="width: 50px; height: auto;">
                                        <% } else { %>
                                            <i class="bi bi-image" style="font-size: 2rem; color: gray;"></i>
                                        <% } %>
                                    </td>
                                    <td><%= jersey.team %></td>
                                    <td><%= jersey.kitType %></td>
                                    <td>$<%= jersey.price.toFixed(2) %></td>
                                    <td><%= jersey.sizes.join(', ') %></td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a href="/admin/jerseys/edit/<%= jersey._id %>" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <form action="/admin/jerseys/delete/<%= jersey._id %>" method="POST" class="d-inline-block" onsubmit="return confirm('Are you sure you want to delete this jersey?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Optional: Include the jQuery library -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</body>
</html>
